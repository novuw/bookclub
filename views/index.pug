  head
    title Book Trader
script.
  function mySuccess(json){
    for(var i = 0; i < json.length; i++){
      console.log(json[i]);
      $('#books').append('<tr>' + '<td>' + json[i].author + '</td>' + '<td>' + json[i].title + '</td>' + '<td>' + json[i].description + '</td>' + '</tr>');
      
      
      
    }
  }
  $(document).ready(function(){
    $.ajax({
        url: 'https://api.mlab.com/api/1/databases/bookstorage/collections/books?apiKey=XwubhE1vzrlUofAGyt_OzccWmOuUFQPl',
        type: "GET",
        dataType: 'json',
        success: mySuccess,
        error: function(err){
          alert(err);
        }
    });
  });
