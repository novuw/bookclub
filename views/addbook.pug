doctype html
html(lang="en")
  link( rel="stylesheet" href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  link(rel="stylesheet" href="/style.css")
  link(href="https://fonts.googleapis.com/css?family=Muli&effect=3d" rel="stylesheet")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  head
    title Book Trader
script.
  function addBook(){
    window.location.replace('https://booktrading.glitch.me/addbook');
  }
  function trades(){
    window.location.replace('https://booktrading.glitch.me/trades');
  }
  function profile(){
    window.location.replace('https://booktrading.glitch.me/profile');
  }
   function home(){
    window.location.replace('https://booktrading.glitch.me/');
  }
body
    div(class="well")
        h1(onclick="home()") #[i Book Trading Club]
        center
          button(class="btn btn-info" style={'margin-left': '2%', 'margin-right': '2%'} onclick="profile()") Profile
          button(class="btn btn-success" style={'margin-right': '2%'} onclick='trades()') Trades
          button(class="btn btn-danger" onclick='addBook()') Add Book
    center
      div(class='well' style={'width': '40%'})
        h2 Add a Book
        form(action='addbooksubmit' method='GET')
          input(type='text' placeholder='Author' name='author' autocomplete='off')
          br
          input(type='text' placeholder='Title' name='title' autocomplete='off')
          br
          input(type='text' placeholder='Description' name='desc' autocomplete='off')
          br
          input(class='btn btn-primary' type='submit' style={'margin-top':'2%'})
        if msg
          h3 #{msg}
